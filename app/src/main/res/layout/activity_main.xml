<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RR"
    tools:context="com.example.luv.motivation.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
         />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:text="MOTIVATION"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/line"
        android:layout_height="7dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/textView2"
        />
    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        android:hint="enter #ID (INTEGER)"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/name"
        android:layout_marginTop="25dp"
        android:id="@+id/RR_buttons"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/backcircle" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/center"
            android:layout_centerHorizontal="true"
            />



        <RelativeLayout
            android:layout_width="100dp"
            android:layout_above="@+id/center"
            android:onClick="show_by_id"
            android:layout_toRightOf="@+id/center"
            android:layout_height="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:alpha="0.4"/>
            <ImageView
                android:id="@+id/ID"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/id"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="show:ID"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_below="@+id/ID"
                android:textColor="#ffffff"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="100dp"
            android:onClick="show_all_quotes"
            android:layout_below="@+id/center"
            android:layout_toLeftOf="@+id/center"
            android:layout_height="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:alpha="0.4"/>
            <ImageView
                android:id="@+id/button7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/show_all"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="show all"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_below="@+id/button7"
                android:textColor="#ffffff"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:onClick="show_all_fav"
            android:layout_above="@+id/center"
            android:layout_toLeftOf="@+id/center"
            android:layout_height="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:alpha="0.4"/>
            <ImageView
                android:id="@+id/fav"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/fav"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="FAV"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_below="@+id/fav"
                android:textColor="#ffffff"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="100dp"
            android:onClick="one_by_one"
            android:layout_below="@+id/center"
            android:layout_toRightOf="@+id/center"
            android:layout_height="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:alpha="0.4"/>
            <ImageView
                android:id="@+id/button5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/one_by_one"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="1 by 1"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_below="@+id/button5"
                android:textColor="#ffffff"/>

        </RelativeLayout>


    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/line"
        android:layout_marginTop="15dp"
        android:id="@+id/RR_quote"
        android:visibility="gone"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:background="#000000"
            android:alpha="0.5"
            android:layout_margin="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Hello World!"
            android:layout_margin="12dp"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="60dp"
            android:src="@drawable/error"
            android:onClick="cancel_quote"
            android:layout_alignParentRight="true"
            android:layout_height="60dp" />


    </RelativeLayout>



</RelativeLayout>
