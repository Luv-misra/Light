<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">



    <ImageView
        android:id="@+id/back"
        android:background="@drawable/relative_layout_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/b1" />

    <TextView
        android:id="@+id/back2"
        android:alpha="0.5"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />


    <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18dp"
            android:tag="refresh"
            android:textColor="#ffffff"
            android:text="jbkjbjkbkbkb"
            android:id="@+id/textView">
    </TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >
        <TextView
            android:id="@+id/left_sc"
            android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text=""
        android:layout_weight="1"
        android:gravity="center"
         />
        <TextView
            android:id="@+id/right_sc"
            android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text=""
        android:layout_weight="1"
        android:gravity="center"
        />
    </LinearLayout>

    <ImageView
            android:id="@+id/share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="share"
        android:layout_marginTop="7dp"
            android:src="@drawable/share"
            android:text="share"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/actionButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:tag="refresh"
        android:src="@drawable/like"
        android:text="Refresh"/>


    <ImageView
            android:id="@+id/copy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="copy"
            android:layout_marginRight="7dp"
            android:src="@drawable/copy"
            android:text="copy"
            android:layout_marginTop="7dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/showBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/showback" />

    <ImageView
        android:id="@+id/openApp"
        android:layout_width="30dp"
        android:src="@drawable/openapp"
        android:layout_marginLeft="7dp"
        android:layout_height="30dp"
        android:layout_marginBottom="7dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center_horizontal"
        android:minWidth="60dp"
        android:textSize="14dp"
        android:layout_marginBottom="13dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/right"
        android:id="@+id/right"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="7dp"
        android:layout_toRightOf="@+id/author"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:layout_width="30dp"
        android:id="@+id/left"
        android:layout_height="30dp"
        android:src="@drawable/left"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="7dp"
        android:layout_toLeftOf="@+id/author"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:layout_width="180dp"
        android:background="#ffffff"
        android:text="black"
        android:visibility="gone"
        android:textColor="#000000"
        android:id="@+id/black_back"
        android:paddingLeft="15dp"
        android:layout_alignParentRight="true"
        android:textSize="30dp"
        android:layout_marginRight="7dp"
        android:layout_above="@+id/no_back"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:visibility="gone"
        android:id="@+id/line4"
        android:layout_marginRight="7dp"
        android:layout_above="@+id/no_back"
        android:layout_alignParentRight="true"
        android:background="#000000"
        />
    <TextView
        android:layout_width="180dp"
        android:id="@+id/no_back"
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:text="no back"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="7dp"
        android:textSize="30dp"
        android:background="#ffffff"
        android:layout_above="@+id/showBack"
        android:layout_height="wrap_content" />


</RelativeLayout>
