<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">



    <ImageView
        android:id="@+id/back"
        android:background="@drawable/relative_layout_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/b1" />

    <TextView
        android:id="@+id/back2"
        android:alpha="0.5"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />


    <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="18dp"
            android:tag="refresh"
            android:textColor="#ffffff"
            android:text="jbkjbjkbkbkb"
            android:id="@+id/textView">
    </TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >
        <TextView
            android:id="@+id/left_sc"
            android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text=""
        android:layout_weight="1"
        android:gravity="center"
         />
        <TextView
            android:id="@+id/right_sc"
            android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text=""
        android:layout_weight="1"
        android:gravity="center"
        />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/func"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="share"
            android:paddingTop="7dp"
            android:src="@drawable/share"
            android:text="share"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/actionButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="7dp"
            android:paddingTop="7dp"
            android:tag="refresh"
            android:src="@drawable/like"
            android:text="Refresh"/>


        <ImageView
            android:id="@+id/copy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tag="copy"
            android:layout_marginRight="7dp"
            android:src="@drawable/copy"
            android:text="copy"
            android:paddingTop="7dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


        <ImageView
            android:id="@+id/openApp"
            android:layout_width="30dp"
            android:src="@drawable/openapp"
            android:paddingLeft="7dp"
            android:layout_height="30dp"
            android:paddingBottom="7dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <ImageView
        android:layout_width="150dp"
        android:src="@drawable/like"
        android:id="@+id/liking"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_height="150dp" />


    <ImageView
        android:id="@+id/showBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingRight="7dp"
        android:paddingBottom="7dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/settings" />



    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center_horizontal"
        android:minWidth="60dp"
        android:textSize="14dp"
        android:layout_marginBottom="13dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/right"
        android:id="@+id/right"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="7dp"
        android:layout_toRightOf="@+id/author"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:layout_width="30dp"
        android:id="@+id/left"
        android:layout_height="30dp"
        android:src="@drawable/left"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="7dp"
        android:layout_toLeftOf="@+id/author"
        android:layout_alignParentBottom="true"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/SETTINGS"
        android:visibility="gone"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:background="#000000"
            android:alpha="0.9"
            android:id="@+id/AAA"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:text="SETTINGS"
                android:id="@+id/title"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="100dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/title"
                android:layout_height="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/textborder"
                    android:id="@+id/no_back"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="20dp"
                        android:text="blackground"
                        android:padding="10dp"
                        android:id="@+id/a1"
                        android:textColor="#ffffff"
                        android:layout_marginRight="100dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/error"
                        android:paddingRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/a1"
                        android:layout_height="50dp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/done"
                        android:paddingRight="20dp"
                        android:id="@+id/tick_back"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/a1"
                        android:layout_height="50dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/no_back"
                    android:background="@drawable/textborder"
                    android:id="@+id/black_back"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="20dp"
                        android:text="opequeness"
                        android:padding="10dp"
                        android:id="@+id/a2"
                        android:textColor="#ffffff"
                        android:layout_marginRight="100dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/error"
                        android:paddingRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/a2"
                        android:layout_height="50dp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/done"
                        android:paddingRight="20dp"
                        android:id="@+id/tick_black"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/a2"
                        android:layout_height="50dp" />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/black_back"
                    android:background="@drawable/textborder"
                    android:id="@+id/no_func"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="20dp"
                        android:text="functions"
                        android:padding="10dp"
                        android:id="@+id/a3"
                        android:textColor="#ffffff"
                        android:layout_marginRight="125dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/error"
                        android:paddingRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/a3"
                        android:layout_height="50dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/done"
                        android:paddingRight="20dp"
                        android:id="@+id/tick_func"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/a3"
                        android:layout_height="50dp" />


                </RelativeLayout>









            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"

                android:id="@+id/more"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/textborder"
                android:text="more settings"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="40dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:id="@+id/bbs"
                android:src="@drawable/left"
                android:layout_height="40dp" />


        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>
